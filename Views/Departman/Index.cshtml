@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

<br />
<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
        @foreach (var d in Model)  
        {
         <tr>

             <td>@d.DepartmanID</td>
             <td>@d.DepartmanAd</td>
             <td><a href="/Departman/DepartmanSil/@d.DepartmanID" class="btn btn-danger">Sil</a></td>
             <td><a href="/Departman/DepartmanGetir/@d.DepartmanID" class="btn btn-success">Güncelle</a></td>
             <td><a href="/Departman/DepartmanDetay/@d.DepartmanID" class="btn btn-outline" style="background-color:beige">Detay</a></td>

         </tr>
        }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-primary">Departman Ekle</a>