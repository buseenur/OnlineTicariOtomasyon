@model List<SatisHareket>
@using OnlineTicariOtomasyon.Models.Siniflar
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "DepartmanPersonelSatis";
}

<br />
<h1>Departman Personel Satış Sayfası</h1>
<br />
<ol class="breadcrumb mb-4">
   
    <li class="breadcrumb-item active">Personel Ad: @ViewBag.dp</li>
</ol>
<br />

<table class="table table-condensed">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM TUTAR</th>
        <th>TARİH</th>
        <th>YAZDIR</th>
    </tr>
    @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisID</td>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.Fiyat</td>
                <td>@x.Adet</td>
                <td>@x.ToplamTutar</td>
                <td>@x.Tarih</td>
                <td><a href="#" class="btn btn-default" style="background-color: cadetblue">Yazdır</a></td>
            </tr>

        }

</table>

