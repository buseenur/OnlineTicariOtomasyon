@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

<br />
<table class="table table-striped">
    <tr>
        <th>CARİ ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>MAİL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var c in Model)
        {
            <tr>
                <td>@c.CariID</td>
                <td>@c.CariAd</td>
                <td>@c.CariSoyad</td>
                <td>@c.CariSehir</td>
                <td>@c.CariMail</td>
                <td><a href="/Cari/CariSil/" class="btn btn-danger">Sil</a></td>
                <td><a href="/Cari/CariGetir/@c.CariID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Cari/MusteriSatis/@c.CariID" class="btn btn-default"style="background-color: beige">Satış Geçmişi</a></td>
            </tr>
        }
</table>
<a href="/Cari/CariEkle" class="btn btn-info">Yeni Cari Ekle</a>
